@model MusicStore.Domain.DTO.ShoppingCartDTO

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Order">Order now!</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.AllAlbums)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if(Model.AllAlbums.Count() == 0)
        {
            <tr>
                <td colspan="5" class="text-center"><b><i>No albums in cart</i></b></td>
            </tr>
        }
        else
        {
            @foreach (var item in Model.AllAlbums)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Album.Title)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Quantity)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Album.Price)
                    </td>
                    <td>
                        <a asp-action="DeleteAlbumFromShoppingCart" asp-route-albumId="@item.AlbumId">Remove from cart</a>
                    </td>
                </tr>
            }
        }
    </tbody>
    <tfoot>
        @if (Model.AllAlbums.Count() != 0)
        {
            <tr>
                <th>Total Cart Price:</th>
                <th></th>
                <th></th>
                <th>USD: @Model.TotalPrice</th>
                <th></th>
            </tr>
        }

    </tfoot>
</table>
